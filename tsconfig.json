{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "../dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", 
    "paths": {
      "src/*": [
        "./src/*"
      ] 
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": [ "src/types/**/*", "src/**/*"],
  "exclude": [
    "node_modules",
    "../frontend",
    "../dist"
  ]
}