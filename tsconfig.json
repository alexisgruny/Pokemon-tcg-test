{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "../dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // doit pointer Ã  la racine du projet
    "paths": {
      "src/*": [
        "./src/*"
      ] // alias pour que 'src/' fonctionne partout
    },
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../frontend",
    "../dist"
  ]
}