<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="/styles/navbar.css">
    <link rel="stylesheet" href="/styles/footer.css">
    <link rel="stylesheet" href="/styles/cards.css">
</head>

<body>
    <%- include('partials/navbar') %>

        <h1>
            <%= title %>
        </h1>

        <!-- Bouton pour changer le mode d'affichage -->
        <button id="toggle-view" class="toggle-view">Changer l'affichage</button>

        <div class="filters">
            <div id="filter-buttons" class="button-group">
                <button class="btn" data-value="number">1-9</button>
                <button class="btn" data-value="name">A-Z</button>
            </div>


            <div id="type-buttons" class="button-group">
                <button class="btn all active" data-value="all">Tous</button>
                <button class="btn fire" data-value="Fire"></button>
                <button class="btn water" data-value="Water"></button>
                <button class="btn lightning" data-value="Lightning"></button>
                <button class="btn grass" data-value="Grass"></button>
                <button class="btn fighting" data-value="Fighting"></button>
                <button class="btn psychic" data-value="Psychic"></button>
                <button class="btn dragon" data-value="Dragon"></button>
                <button class="btn darkness" data-value="Darkness"></button>
                <button class="btn metal" data-value="Metal"></button>
                <button class="btn colorless" data-value="Colorless"></button>
                <!-- Ajoute les autres types ici -->
            </div>

            <div id="rarity-buttons" class="button-group">
                <button class="btn" data-value="all">Tous</button>
                <button class="btn" data-value="One Diamond">Commune</button>
                <button class="btn" data-value="Two Diamond">Silver</button>
                <button class="btn" data-value="Three Diamond">EX</button>
                <button class="btn" data-value="Four Diamond">Full-Art</button>
                <button class="btn" data-value="One Star">EX-Full-Art</button>
                <button class="btn" data-value="Two Star">Shiny</button>
                <button class="btn" data-value="Three Star">Animé</button>
                <button class="btn" data-value="Crown">Gold</button>
                <button class="btn" data-value="One Shiny">Promo</button>
            </div>

            <div id="set-buttons" class="button-group">
                <button class="btn" data-value="all">Tous</button>
                <button class="btn" data-value="Genetic Apex"><img src="https://assets.tcgdex.net/en/tcgp/A1/logo.webp" alt="Genetic Apex"></button>
                <button class="btn" data-value="Mythical Island"><img src="https://assets.tcgdex.net/en/tcgp/A1a/logo.webp" alt="Mythical Island"></button>
                <button class="btn" data-value="Space-Time Smackdown"><img src="https://assets.tcgdex.net/en/tcgp/A2/logo.webp" alt="Space-Time Smackdown"></button>
                <button class="btn" data-value="Triumphant Light"><img src="https://assets.tcgdex.net/en/tcgp/A2a/logo.webp" alt="Triumphant Light"></button>
                <button class="btn" data-value="Shining Revelry"><img src="https://assets.tcgdex.net/en/tcgp/A2b/logo.webp" alt="Shining Revelry"></button>
                <button class="btn" data-value="Celestial Guardians"><img src="https://assets.tcgdex.net/en/tcgp/A3/logo.webp" alt="Celestial Guardians"></button>
                <button class="btn" data-value="Promos-A"><img src="https://assets.tcgdex.net/en/tcgp/P-A/logo.webp" alt="Promos-A"></button>
            </div>

            <label for="search">Recherche :</label>
            <input type="text" id="search" placeholder="Rechercher un Pokémon..." autocomplete="off" />
            <ul id="autocomplete-results"></ul>
        </div>

        <ul id="cards-container" class="grid-view">
            <% cards.forEach(card=> { %>
                <li class="card-item">
                    <p><strong>
                            <%= card.name %>
                        </strong></p>
                    <a href="/cards/<%= card.id %>">
                        <img src="<%= card.image && card.image !== 'Inconnu' ? card.image + '/high.webp' : '/images/BackCardPokemon.webp' %>"
                            alt="<%= card.name %>" data-type="<%= card.type %>" data-rarity="<%= card.rarity %>"
                            data-set="<%= card.setName %>">
                    </a>
                    <% if (isAuthenticated) { %>
                        <div class="card-counter" data-card-id="<%= card.id %>">
                            <button class="decrement">-</button>
                            <span class="quantity">
                                <%= card.quantity || 0 %>
                            </span>
                            <button class="increment">+</button>
                        </div>
                        <% } %>
                </li>
                <% }); %>
        </ul>

        <%- include('partials/footer') %>

            <script src="/scripts/cardCounter.js"></script>
            <script src="/scripts/toggleView.js"></script>
            <script src="/scripts/cardFilter.js"></script>
</body>

</html>