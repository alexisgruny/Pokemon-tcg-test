<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="/styles/navbar.css">
    <link rel="stylesheet" href="/styles/footer.css">
</head>

<body>

    <%- include('partials/navbar') %>

        <h1>
            <%= title %>
        </h1>
        <ul>
            <% cards.forEach(card=> { %>
                <li>
                    <a href="/cards/<%= card.id %>"> <!-- Lien vers la page de dÃ©tails -->
                        <img src="<%= card.image %>/high.webp" alt="<%= card.name %>">
                    </a>
                    <p><strong><%= card.name %></strong></p>

                <!-- Formulaire pour ajouter ou retirer la carte -->
                <form action="/cards/addOrUpdate" method="POST" style="display: inline;">
                    <input type="hidden" name="cardId" value="<%= card.id %>">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit">Ajouter</button>
                </form>

                <form action="/cards/delete" method="POST" style="display: inline;">
                    <input type="hidden" name="cardId" value="<%= card.id %>">
                    <button type="submit">Retirer</button>
                </form>
                </li>
                <% }) %>
        </ul>

        <%- include('partials/footer') %>

</body>

</html>